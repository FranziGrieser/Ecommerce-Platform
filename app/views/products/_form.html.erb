<%= form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= form.label :name %>
      <div class="col sm-10">
        <%= form.text_field(:name, size: 30, class: "create_input") %><br><br>
    </div>
    </div>

    <div class="field form-group">
      <%= form.label :description %>
      <div class="col sm-10">
        <%= form.text_area(:description, cols: 30, rows: 10, class: 'descrip_input') %><br><br>
      </div>
    </div>

    <div class="field form-group">
      <%= form.label :image_url %>
      <div class="col sm-10">
        <%= form.text_field(:image_url, size: 30, class: "create_input") %><br><br>
      </div>
    </div>

    <div class="field form-group">
      <%= form.label :color %>
      <div class="col sm-10">
        <%= form.text_field(:color, size: 30, class: "create_input") %><br><br>
    </div>
    </div>

    <div class="field form-group">
      <%= form.label :price %>
      <div class="col sm-10">
        <%= form.text_field(:price, size: 30, class: "create_input", placeholder: '$') %><br><br>
      </div>
    </div>

    <div class="actions">
      <%= form.submit(class: "btn btn-light")%>
    </div>
  <% end %>
