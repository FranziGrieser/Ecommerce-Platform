<section class="container">
  <%= form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %><br><br>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %><br><br>
    </div>

    <div class="field">
      <%= form.label :image_url %>
      <%= form.text_field :image_url %><br><br>
    </div>

    <div class="field">
      <%= form.label :color %>
      <%= form.text_field :color %><br><br>
    </div>

    <div class="field">
      <%= form.label :price %>
      <%= form.text_field :price %> $<br><br>
    </div>

    <div class="actions">
      <%= form.submit(class: "btn btn-light")%>
    </div>
  <% end %>

</section>
