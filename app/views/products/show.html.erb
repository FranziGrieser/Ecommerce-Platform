<section class="container back">
  <header>
    <h3><%= @product.name %></h3>
  </header>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <p>
        <%= image_tag(@product.image_url, class: "img-fluid") %>
      </p>
    </div> <!-- /col image-->
    <div class="col-sm-12 col-md-6">

      <p>
        <strong>Description:</strong><br>
        <%= simple_format(@product.description) %>
      </p>
      <p>
        <strong>Color:</strong><br>
        <%= @product.color %>
      </p>
      <p>
        <strong>Price:</strong><br>
        <%= @product.price %> $
      </p>
      <p>
        <strong>Highest Review: </strong><br>
          <% if @product.comments.length > 0 %>
          <em><q><%= @product.highest_rating_comment.body %></q></em>
        <% end %>
      </p>
      <p>
        <strong>Average Rating:</strong>
        <div class="rated" data-score="<%= @product.average_rating %>"></div>
      </p>

    </div> <!-- /col text-->
    <div class="col-sm-12 col-md-6">
      <%= render 'new_comment' %>
    </div>
  </div> <!-- /row-->

  <%= render 'comments' %><br>

  <%= will_paginate @comments %><br><br>

<% if can? :update, @product %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
  <%= link_to 'Back', products_path %><br><br>

</section>
