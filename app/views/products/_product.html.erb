<div class="col-sm-10 col-md-5 col-lg-3" id="product_frame">
  <% cache product do %>
    <h3 id="productname"><%= link_to product.name, product %></h3>
    <%= link_to image_tag(product.image_url, class: "img-fluid"), product unless product.image_url.nil? %>
    <p><%= simple_format(product.description.truncate(75)) %></p>
    <p><strong><%= product.display_price %> $</strong></p>

    <%= form_for @order_item, remote: true do |f| %>
      <div class="input-group">
        <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
        <div class="actions">
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.submit "Add to Cart", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  <% end %>
    <p ><%= link_to 'See more details', product %><% if can? :update, product %> | <%= link_to 'Edit', edit_product_path(product) %> | <% end %><% if can? :destroy, product %><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></p>

</div><!-- /col -->
