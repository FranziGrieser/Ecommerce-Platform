<p id="notice"><%= notice %></p>

<header class="container">
  <h1>Products</h1>
</header>

<div class="container ">
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-sm-4 col-md-3 col-lg" id="product_frame">
      <a href="#"><h3 id="product_name"><%= product.name %></h3></a>
      <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
      <p><%= product.description %></p>
      <p><%= product.color %></p><hr>
      <p><strong><%= product.price %> $</strong></p>
      <p><%= link_to 'Show', product %> | <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div><!-- /col -->
    <% end %>
  </div> <!-- /row-->
  <br><br>
  <div class="btn btn-light">
    <%= link_to 'New Product', new_product_path %>
  </div>
</div><!-- /container-->

  <br>
