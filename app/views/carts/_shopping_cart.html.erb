<section class="container back">
  <!-- Error message -->
  <% if !@order_item.nil? && @order_item.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @order_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Cart Items -->
  <% if @order_items.size == 0 %>
    <p class="text-center">
      There are no items in your shopping cart. Please go </br>
      <%= link_to 'back to products', products_path %>
    </p>
  <% else %>
    <% @order_items.each do |order_item| %>
      <%= render 'cart_row', product: order_item.product, order_item: order_item, show_total: true %>
    <% end %>
    <%= link_to 'Continue Shopping', products_path %>

    <!-- Payment  -->
    <% if user_signed_in? %>
      <%= link_to 'Checkout', 'carts/checkout', :class: "btn btn-success" %>
    <% else %>
      <%= link_to 'Login to checkout!', user_session_path, class: "btn btn-primary" %>
    <% end %>
    
  <% end %>
</section>
