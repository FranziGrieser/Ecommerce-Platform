<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></h4>
      <%= image_tag(@product.image_url, class: "img-fluid") %>
      <h4 class="text-right">Price: <%= number_to_currency order_item.unit_price %></h4>

    </div>
    <div class="col-xs-4">
      <%= form_for order_item, remote: true do |f| %>
        <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
        <%= f.hidden_field :product_id, value: product.id %>
        <h4 class="text-right">Total Price: <%= number_to_currency order_item.total_price %></h4>
   </div>
    </div><!-- /row-->
      <div class="actions">
        <%= f.submit "Update Quantity", class: "btn btn-primary" %>
        <%= link_to "Remove", order_item, { data: { confirm: "Are you sure you want to remove the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
      </div>
    <% end %>


</div>
